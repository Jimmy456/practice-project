<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
		"-//mybatis.org//DTD Mapper 3.0//EN" 
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- BoardDAO의 메서드에 맞춰 실행될 SQL문을 작성한다 -->
<mapper namespace="com.itbank.board.BoardDAO">
	<update id="update" parameterType="com.itbank.board.BoardDTO">
		update board2
			<set>
		<if test="category != null">	category	=	#{category},	</if>
		<if test="title != null">		title		=	#{title},		</if>
		<if test="content != null">		content		=	#{content},		</if>
		<if test="uploadFile != null">	uploadFile	=	#{uploadFile},	</if>
			</set>
			where
				idx			=	#{idx}
	</update>
	
	
	<select id="selectList" 
			parameterType="hashmap" 
			resultType="board">
		select * from board2 
			<where>
				<if test="category != null and '' != category">
					category = #{category} and
				</if>
				<if test="column != null">
					${column} like '%${search}%' and
				</if>
				deleted != 'y'
			</where> 
			order by idx desc	
	</select>
	
	
	
</mapper>




